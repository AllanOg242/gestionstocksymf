{% extends 'accueil.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="row">
    <div class="container col-md-6 col-lg-6 col-sm-6 col-xs-6">
        <div class="card">
            <div class="card-header">Gestion des listes des produits</div>
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Identifiant</th>
                        <th>Libellé</th>
                        <th>Quantité en stock</th>
                        <th>Action</th>
                        <th>Action</th>
                    </tr>
                    {% for p in produits %}
                        <tr>
                            <td>{{ p.id }}</td>
                            <td>{{ p.libelle }}</td>
                            <td>{{ p.qtStock }}</td>
                            <td><a href="{{ path('produit_edit', {'id' : p.id}) }}">Editer</a></td>
                            <td><a href="{{ path('produit_delete', {'id' : p.id}) }}">Supprimer</a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    <div class="container col-md-6 col-lg-6 col-sm-6 col-xs-6">
        <div class="card">
            <div class="card-header">Formulaire de gestion des produits</div>
            <div class="card-body">
                {{ form(form) }}
            </div>
        </div>
    </div>

{% endblock %}
